<header class="sticky top-0 z-50">
  <nav
    class="bg-white/90 backdrop-blur-xl border-b border-orange-100
           px-4 md:px-6 py-3
           flex flex-wrap items-center shadow-sm">

    <!-- BRAND -->
    <div
      class="flex items-center gap-2
             text-lg sm:text-xl md:text-2xl
             font-extrabold tracking-wide
             w-full md:w-auto
             justify-start">
      <span class="text-orange-500">ЁЯФЧ</span>
      <span class="text-orange-500">
        рдХрд╛рд░реНрдп<span class="text-gray-700">рд╕реЗрддреБ</span>
      </span>
    </div>

    <!-- MENU -->
    <ul
      class="w-full md:w-auto
             ml-0 md:ml-auto
             mt-3 md:mt-0
             flex flex-wrap items-center
             gap-2 md:gap-6
             text-xs sm:text-sm
             font-medium">

      <%
        const base = `group relative
        px-3 py-1.5 md:px-1 md:py-0
        rounded-full md:rounded-none
        text-gray-600 hover:text-orange-500
        transition-all duration-300`;

        const activeText = `text-orange-600 font-semibold
        bg-orange-50 md:bg-transparent`;

        const line = `absolute left-0 -bottom-1 h-[2.5px] w-full
        bg-orange-500 rounded-full transform scale-x-0 origin-center
        transition-transform duration-500 ease-in-out
        group-hover:scale-x-100 hidden md:block`;

        const activeLine = `scale-x-100`;
      %>

      <!-- HOME -->
      <li>
        <a href="/" class="<%= `${base} ${path === '/' ? activeText : ''}` %>">
          ЁЯПа Home
          <span class="<%= `${line} ${path === '/' ? activeLine : ''}` %>"></span>
        </a>
      </li>

      <% if (!isLoggedIn) { %>

        <li>
          <a href="/login" class="<%= `${base} ${path === '/login' ? activeText : ''}` %>">
            ЁЯФР Login
            <span class="<%= `${line} ${path === '/login' ? activeLine : ''}` %>"></span>
          </a>
        </li>

        <li>
          <a href="/signup" class="<%= `${base} ${path === '/signup' ? activeText : ''}` %>">
            ЁЯУЭ Sign Up
            <span class="<%= `${line} ${path === '/signup' ? activeLine : ''}` %>"></span>
          </a>
        </li>

      <% } else { %>

        <li>
          <a href="/profile" class="<%= `${base} ${path === '/profile' ? activeText : ''}` %>">
            тД╣я╕П Profile
            <span class="<%= `${line} ${path === '/profile' ? activeLine : ''}` %>"></span>
          </a>
        </li>

        <% if (role === 'worker') { %>
          <li>
            <a href="/jobs" class="<%= `${base} ${path === '/jobs' ? activeText : ''}` %>">
              ЁЯТ╝ Jobs
              <span class="<%= `${line} ${path === '/jobs' ? activeLine : ''}` %>"></span>
            </a>
          </li>
        <% } %>

        <% if (role === 'employer') { %>
          <li>
            <a href="/post-job" class="<%= `${base} ${path === '/post-job' ? activeText : ''}` %>">
              тЮХ Post Job
              <span class="<%= `${line} ${path === '/post-job' ? activeLine : ''}` %>"></span>
            </a>
          </li>
        <% } %>

        <li>
          <a
            href="/logout"
            class="px-3 py-1.5 rounded-full
                   text-red-500 font-semibold
                   hover:bg-red-50 md:hover:bg-transparent">
            ЁЯЪк Logout
          </a>
        </li>

      <% } %>
    </ul>
  </nav>
</header>
